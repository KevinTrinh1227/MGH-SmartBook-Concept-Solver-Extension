{
  "manifest_version": 3,
  "name": "McGrawHill Concepts Solver Bot",
  "description": "Automates McGrawHill SmartBook concept questions for educational and demonstration purposes only.",
  "version": "1.1.0",
  "author": "Kevin Trinh",
  "homepage_url": "https://www.kevintrinh.dev",
  "action": {
    "default_popup": "index.html",
    "default_title": "McGrawHill Concepts Solver Bot"
  },

  "background": {
    "service_worker": "serviceCore.js"
  },

  "permissions": ["activeTab", "storage", "scripting"],

  "host_permissions": ["*://learning.mheducation.com/*"],

  "content_scripts": [
    {
      "matches": ["*://learning.mheducation.com/*"],
      "js": ["contentSolver.js", "answerOverlay.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["*://learning.mheducation.com/*"]
    }
  ],

  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
